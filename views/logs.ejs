    <script>
        var $datatableUsers = $('#datatable-logs').DataTable({
            "ajax": "/api/logs",
            "deferRender": true,
            "columns": [
                {data:"activity"},
                {data:"content"},
                {data:"user"},
                {data:"ip"},
                {
                    data:"date",
                    render: function(date,x,row) {
                        return moment(date).format('LLL');
                    }
                }
            ],
            "dataSrc": 'data',
            "scrollX": true
        });
    </script>

